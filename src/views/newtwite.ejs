<div class="card mt-5 mb-5 <%= values.isLogedInUser ? '' : 'd-none' %>">
  <h5 class="mt-5 text-center">Write your twite!</h5>
  <div class="card-body">
    <form method="POST" action="/twite">
      <div class="form-group m-3">
        <input class="form-control <%= errors.title ? 'is-invalid' : '' %>" type="text" id="title" name="title"
          placeholder="Title" value="<%= values.title %>" />
        <div class="invalid-feedback">
          <%= errors.title %>
        </div>
      </div>

      <div class="form-group m-3">
        <textarea class="form-control <%= errors.twite ? 'is-invalid' : '' %>" placeholder="Your text twite" style="overflow: auto; resize: none" id="twite" name="twite" rows="5"><%= values.twite %></textarea>
        <div class="invalid-feedback">
          <%= errors.twite %>
        </div>
      </div>

      <div class="form-row mb-2 d-flex justify-content-center">
        <button class="btn btn-info" type="submit">Twite it!</button>
      </div>
    </form>
  </div>
</div>